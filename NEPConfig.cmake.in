# NEPConfig.cmake.in - CMake configuration file for NEP
# Generated from NEPConfig.cmake.in by CMake

@PACKAGE_INIT@

set(NEP_VERSION "@PROJECT_VERSION@")

# Set the installation prefix
set(NEP_INSTALL_PREFIX "@CMAKE_INSTALL_PREFIX@")

# Library installation directory
set(NEP_LIBRARY_DIR "@CMAKE_INSTALL_FULL_LIBDIR@")

# Include directory
set(NEP_INCLUDE_DIR "@CMAKE_INSTALL_FULL_INCLUDEDIR@")

# GRIB2 UDF support availability
set(NEP_HAVE_GRIB2 @HAVE_GRIB2@)

# Initialize target list
set(NEP_LIBRARIES "")

# Define imported target for GRIB2 library if available
if(NEP_HAVE_GRIB2)
    if(NOT TARGET NEP::ncgrib2)
        add_library(NEP::ncgrib2 SHARED IMPORTED)
        set_target_properties(NEP::ncgrib2 PROPERTIES
            IMPORTED_LOCATION "${NEP_LIBRARY_DIR}/libncgrib2.so"
            INTERFACE_INCLUDE_DIRECTORIES "${NEP_INCLUDE_DIR}"
        )
        list(APPEND NEP_LIBRARIES NEP::ncgrib2)
    endif()
endif()

# Provide summary information
message(STATUS "Found NEP version ${NEP_VERSION}")
if(NEP_HAVE_GRIB2)
    message(STATUS "NEP GRIB2 UDF support available")
endif()

check_required_components(NEP)
